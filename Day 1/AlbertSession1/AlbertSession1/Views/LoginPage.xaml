<Page x:Class="AlbertSession1.LoginScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlbertSession1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Email" FontSize="18"/>
            <TextBox x:Name="emailTextBox" FontSize="16" Margin="0,5"/>
            <TextBlock Text="Password" FontSize="18"/>
            <PasswordBox x:Name="passwordBox" Margin="0,5" FontSize="16" PasswordChanged="passwordBox_PasswordChanged"/>

            <TextBlock Text="" x:Name="errorText" Foreground="Red" Margin="0,5"/>
            <TextBlock Text="" x:Name="timerText" Foreground="Orange" Margin="0,5"/>
            <Button Content="Sign in"  Click="Login_Click" Margin="0,10"/>
            <Button Content="Sign up"  Click="Register_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Page>
