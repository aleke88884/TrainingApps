<Window x:Class="AlbertSession1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlbertSession1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#EEE" >
            <Image Source="Logo.png" Height="40" Width="40" Margin="5" />
            <TextBlock Text="Albert Einstein Cup" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Основной фрейм -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Automatic" />
    </DockPanel>
</Window>
