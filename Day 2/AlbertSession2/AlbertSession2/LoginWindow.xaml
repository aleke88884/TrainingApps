<Window x:Class="AlbertSession2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlbertSession2"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" >
            <TextBlock Text="Username" FontSize="18"/>
            <TextBox x:Name="usernameTextBox" FontSize="16" Width="300" Margin="0,10,0,20"/>
            <TextBlock Text="Password" FontSize="18"/>
            <PasswordBox x:Name="passwordTextBox" FontSize="16" Width="300" Margin="0,10,0,20"/>
            <Button x:Name="btnLogin" Click="btnLogin_Click" Content="Login" Width="100" Height="30" Margin="0,10,0,0" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
