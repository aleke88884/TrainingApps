<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlbertSession2Mobile.MainPage">

    <StackLayout Padding="20" VerticalOptions="Center">
        <Image Source="logo.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="100"/> 
        <Entry Placeholder="Email" x:Name="emailEntry"/>
        <Entry Placeholder="Password" IsPassword="True" x:Name="passwordEntry"/>
        <Button Text="Login" x:Name="btnLogin" Clicked="btnLogin_Clicked"/>
    </StackLayout>

</ContentPage>
